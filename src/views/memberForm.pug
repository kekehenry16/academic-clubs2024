extend layout
block content
  .form-container
    h1 Academic Clubs Management System
    form(action='addmember', method='post')
      label(for='clubName') Member name:
      input(type='text', name='member_name', required)
      br
      label(for='noOfStudents') Member email:
      input(type='email', name='member_email', required)
      br
      label(for='advisorName')  Member registration Number::
      input(type='text', name='member_reg', required)
      br
      label(for='clubName') Member Course:
      input(type='text', name='member_course', required)
      br
      label(for='dateCreated') Date Joined:
      input(type='date', name='date_joined', required)
      br
      button(type='submit') Add Member

  style.
    .form-container {
      text-align: center;
      margin: 50px auto;
      max-width: 600px;
    }

    h1 {
      color: #3498db;
      font-size: 28px;
      margin-bottom: 20px;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    label {
      margin-top: 10px;
      font-size: 16px;
      display: block;
    }

    input, textarea {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      margin-bottom: 15px;
      box-sizing: border-box;
    }

    button {
      background-color: #3498db;
      color: #fff;
      padding: 10px 20px;
      border: none;
      cursor: pointer;
      font-size: 16px;
    }

    button:hover {
      background-color: #2980b9;
    }
